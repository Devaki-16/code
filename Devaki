If Ucase(fstr_SelectOption) = Ucase("Yes") Then
    If WpfWindow("PAST DUE").Exist(5) Then
        Set btnYes = WpfWindow("PAST DUE").WpfButton("Yes")
        If btnYes.Exist(2) And btnYes.WaitProperty("visible", True, 5000) Then
            btnYes.Click
            Wait 2
            bWindow = func_waitExistObj(WpfWindow("Opportunity Focus"))
            If bWindow Then
                rsErrMsg = "Success: Clicked 'Yes' and returned to Opportunity Focus page"
                Reporter.ReportEvent micPass, "Past Opportunity Warning", rsErrMsg
                bFocusPage = True
            Else
                rsErrMsg = "Error: Clicked 'Yes' but did NOT return to Opportunity Focus page"
                Reporter.ReportEvent micFail, "Past Opportunity Warning", rsErrMsg
            End If
        Else
            Reporter.ReportEvent micFail, "Button Visibility", "'Yes' button not visible or not found"
            Exit Function
        End If
    Else
        Reporter.ReportEvent micFail, "Window Missing", "'PAST DUE' window did not appear"
        Exit Function
    End If
