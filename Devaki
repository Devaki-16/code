Set objSustainabilityDeal = WpfWindow("Opportunity Focus").WpfRadioButton("SustainableDeal_ESG Pure Player_Option")

' Wait for radio button to become enabled (up to 15 seconds)
If objSustainabilityDeal.WaitProperty("enabled", True, 15000) Then
    SustainabilityDeal = func_setData(objSustainabilityDeal, fstr_SustainabilityDealValue)
Else
    Reporter.ReportEvent micFail, "Radio Button Not Enabled", "SustainableDeal_ESG Pure Player_Option is not enabled after 15 seconds."
    SustainabilityDeal = False
End If
